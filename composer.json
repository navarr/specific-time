{
    "name": "navarr/specific-time",
    "description": "A static time and date implementation of PSR-20",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Navarr Barnier",
            "email": "me@navarr.me"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/clock": "^1"
    },
    "provide": {
        "psr/clock-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "Navarr\\SpecificTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navarr\\SpecificTime\\Test\\": "tests/"
        }
    },
    "repositories": {
        "dev": {
            "type": "github",
            "url": "https://github.com/php-fig/clock"
        }
    },
    "archive": {
        "exclude": [
            ".composer/",
            ".github/",
            ".idea/",
            "tests/",
            ".env",
            ".gitignore",
            ".phpunit.result.cache",
            "composer.lock",
            "infection.json.dist",
            "phpcs.xml.dist",
            "phpstan.neon",
            "phpunit.xml.dist"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^2",
        "infection/infection": "^0.31.0",
        "squizlabs/php_codesniffer": "^3.6",
        "jetbrains/phpstorm-attributes": "^1.0",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
